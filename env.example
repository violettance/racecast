# RaceCast Environment Configuration

# Database Configuration (Neon PostgreSQL)
DATABASE_URL=postgresql://username:password@hostname:5432/database
DB_HOST=your-neon-hostname
DB_PORT=5432
DB_NAME=racecast
DB_USER=your-username
DB_PASSWORD=your-password

# API Configuration
ERGAST_BASE_URL=https://api.jolpi.ca/ergast/f1
FASTF1_CACHE_DIR=./data/fastf1_cache
API_KEY=your-api-key-here
ALLOW_ORIGINS=https://racecast.vercel.app

# Data Collection Settings
START_YEAR=2017
END_YEAR=2025
MAX_RETRIES=3
REQUEST_DELAY=10.0

# Model Settings
RANDOM_STATE=42
TEST_SIZE=0.2
CV_FOLDS=5
MODEL_RANKER_PATH=models/xgboost/xgboost_ranker_model.pkl

# Feature Engineering
RECENT_RACES_COUNT=5
MIN_RACES_FOR_STATS=3

# Logging
LOG_LEVEL=INFO
LOG_FORMAT={time:YYYY-MM-DD HH:mm:ss} | {level} | {name}:{function}:{line} | {message}
